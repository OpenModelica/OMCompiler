	$(COPY) om_pm_interface.hpp $(PARMODELICAAUTO_INC)
	$(COPY) om_pm_model.hpp $(PARMODELICAAUTO_INC)

Makefile: Makefile.in
	(cd ../../../ && ./config.status)

include Makefile.common
